{
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Awaiting your input' --app-name='Coherify'"
          }
        ]
      }
    ],
    "OnTaskComplete": [
      {
        "matcher": "completed",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Task completed successfully' --app-name='Coherify' --urgency=low"
          }
        ]
      }
    ],
    "OnError": [
      {
        "matcher": "error|failed|exception",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'An error occurred' --app-name='Coherify' --urgency=critical"
          }
        ]
      }
    ]
  }
}